/* miniprogram/pages/secend/zhixing/zhixing.wxss */

.page {
  background-color: #ffffff;
}

.page-image {
  width: 100%;
  height: 100px;
  background-color: blue;
  margin-bottom: 5px;
}

.page-speed {
  width: 100%;
  height: 50px;
  margin-bottom: 5px;
  background-color: #ffffff;
}

.page-speed-title {
  height: 30px;
  margin-left: 25px;
  margin-right: 25px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-speed-progress {
   height: 10px;
   margin-left: 25px;
   margin-right: 25px;

}

.page-interaction-v {
   height: 100px;
   margin-left: 25px;
   margin-right: 25px;
   margin-bottom: 10px;
   background-color: red;
}

.page-scrollVBase {
  height: "{{scrollVHeight}}";
  margin-left: 25px;
  margin-right: 25px;
  margin-bottom: 10px;
}

.page-scrollV {
  background-color: white;
}

.page-scrollV-cell {
  position: relative;
  height: 30px;
  display: flex;
  /* flex-direction: row; */
  align-items: center;
  
}

.page-scrollV-subV-One {
  
  border-radius: 10px;
  width: 20px;
  height: 20px;
}

.page-scrollV-subV-Two {
  margin-left: 15px;
  font-size: 16px;
}

.page-scrollV-subV-Three {
  position: absolute;
  right: 0px;
  font-size: 14px;
}