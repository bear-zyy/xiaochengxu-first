/* miniprogram/pages/secend/zhixing/zhixing.wxss */

.page {
  background-color: #ffffff;
}

.page-image {
  width: 100%;
  height: 100px;
  background-color: blue;
  margin-bottom: 5px;
}

.page-speed {
  width: 100%;
  height: 50px;
  margin-bottom: 10px;
  background-color: #ffffff;
}

.page-speed-title {
  height: 30px;
  margin-left: 25px;
  margin-right: 25px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-speed-progress {
   height: 10px;
   margin-left: 25px;
   margin-right: 25px;

}

.page-interaction-v {
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   height: 170px;
   margin-left: 25px;
   margin-right: 25px;
   margin-bottom: 10px;
}

/* //这个是抢加速包 */
.page-interaction-v-redpacket {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60px;
  margin-bottom: 15px;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgb(243, 243, 243);
}

.page-interaction-v-redpacket-left {
  display: flex;
  background-color: rgb(253, 123, 77);
  width: 25%;
  height: 100%;
  margin-right: 30px;
}

.page-interaction-v-redpacket-left-title {
  color: white;
  font-size: 18px;
  justify-content: center;
  align-items: center;
}

.page-interaction-v-redpacket-center {
  justify-content: center;
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: column;
}
.page-interaction-v-redpacket-center-top {
  justify-content: center;
  margin-top: 5px;
  font-size: 16px;
  color: black;
}

.page-interaction-v-redpacket-center-bottom {
  justify-content: center;
  font-size: 12px;
  color: #aaaaaa;
}

.page-interaction-v-redpacket-right {

  width: 25%;
  height: 30px;
  border-radius: 15px;
  color: white;
  font-size: 12px;
  margin-top: 15px;
  background-color: rgb(253, 123, 77);
}


/* 这个是我要抢票 */
.page-interaction-v-Shakedown {
  width: 100%;
  height: 50px;
  border-radius: 25px;
  text-align: center;
  border: 1px solid rgb(93, 141, 193);
  border-color: rgb(93, 141, 193);
  color: rgb(93, 141, 193);
  margin-bottom: 15px;
}
/* 这个是显示多少人帮忙抢票 和有多少加速包 */
.page-interaction-v-message {
  color: rgb(155, 155, 155);
  font-size: 15px;

}

.page-scrollVBase {
  height: "{{scrollVHeight}}";
  margin-left: 25px;
  margin-right: 25px;
  margin-bottom: 10px;
}

.page-scrollV {
  background-color: white;
}

.page-scrollV-cell {
  position: relative;
  height: 30px;
  display: flex;
  /* flex-direction: row; */
  align-items: center;
  
}

.page-scrollV-subV-One {
  
  border-radius: 10px;
  width: 20px;
  height: 20px;
}

.page-scrollV-subV-Two {
  margin-left: 15px;
  font-size: 16px;
}

.page-scrollV-subV-Three {
  position: absolute;
  right: 0px;
  font-size: 14px;
}